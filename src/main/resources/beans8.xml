<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWorld" class="com.jehon._8event.HelloWorld">
        <property name="message" value="Hello World"/>
    </bean>

    <bean id="cStartEventHandler" class="com.jehon._8event.CStartEventHandler"/>

    <bean id="cStopEventHandler" class="com.jehon._8event.CStopEventHandler"/>

    <bean id="customEventHandler" class="com.jehon._8event.CustomEventHandler"/>

    <bean id="customEventPublisher" class="com.jehon._8event.CustomEventPublisher"/>
</beans>